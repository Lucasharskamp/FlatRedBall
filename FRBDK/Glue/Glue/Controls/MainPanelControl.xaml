<UserControl x:Class="GlueFormsCore.Controls.MainPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:FlatRedBall.Glue.Controls"
             xmlns:viewModels="clr-namespace:GlueFormsCore.ViewModels"
             xmlns:converters="clr-namespace:FlatRedBall.Glue.MVVM.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             MouseDown="UserControl_MouseDown"
             d:DataContext="{d:DesignInstance Type=viewModels:TabControlViewModel, IsDesignTimeCreatable=True}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="/Themes/Dark.xaml" />-->
                <ResourceDictionary Source="/Themes/Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>




    <Grid>
        <Grid.Resources>
            <converters:GridLengthToVisibilityConverter x:Key="GridLengthToVisibilityConverter"/>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="ToolbarControlRow" />
            <RowDefinition Height="{Binding TopPanelHeight, Mode=TwoWay}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{Binding BottomPanelHeight, Mode=TwoWay}" />
        </Grid.RowDefinitions>

        <controls:ToolbarControl x:Name="ToolbarControl" />

        <TabControl x:Name="TopTabControl" 
                    Grid.Row="1" 
                    Padding="0" 
                    DataContext="{Binding TopTabItems}" 
                    ItemsSource="{Binding Tabs}" 
                    SelectedItem="{Binding SelectedTab}" />

        <GridSplitter 
            Height="4" 
            Grid.Row="2" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center" 
            Visibility="{Binding TopPanelHeight, Converter={StaticResource GridLengthToVisibilityConverter}}" />

        <Grid Grid.Row="3" x:Name="CenterGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding LeftPanelWidth, Mode=TwoWay}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{Binding RightPanelWidth, Mode=TwoWay}" />
            </Grid.ColumnDefinitions>

            <TabControl x:Name="LeftTabControl" 
                        Padding="0" 
                        Margin="4,2,2,2" 
                        DataContext="{Binding LeftTabItems}" 
                        ItemsSource="{Binding Tabs}" 
                        SelectedItem="{Binding SelectedTab}" />
            <GridSplitter Width="4" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" 
                          Grid.Column="1"/>
            <TabControl x:Name="CenterTabControl" 
                        Grid.Column="2" 
                        Padding="0" 
                        Margin="2" 
                        DataContext="{Binding CenterTabItems}" 
                        ItemsSource="{Binding Tabs}" 
                        SelectedItem="{Binding SelectedTab}" />
            <GridSplitter Width="4" 
                          Grid.Column="3" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"
                          Visibility="{Binding RightPanelWidth, Converter={StaticResource GridLengthToVisibilityConverter}}" />
            <TabControl x:Name="RightTabControl" 
                        Grid.Column="4" 
                        Padding="0" 
                        Margin="2,2,4,2" 
                        DataContext="{Binding RightTabItems}" 
                        ItemsSource="{Binding Tabs}" 
                        SelectedItem="{Binding SelectedTab}" />
        </Grid>

        <GridSplitter Height="4" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center" 
                      Grid.Row="4" 
                      Visibility="{Binding BottomPanelHeight, Converter={StaticResource GridLengthToVisibilityConverter}}" />

        <TabControl Grid.Row="5" 
                    x:Name="BottomTabControl" 
                    Padding="0" 
                    Margin="4,0,4,2" 
                    DataContext="{Binding BottomTabItems}" 
                    ItemsSource="{Binding Tabs}" 
                    SelectedItem="{Binding SelectedTab}" />

        <Grid Background="#b0000000" Grid.RowSpan="6" x:Name="Spinner" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <controls:ActivitySpinner></controls:ActivitySpinner>
                <Label x:Name="SpinnerLabel" Content="Loading..." HorizontalAlignment="Center" FontSize="24" Foreground="White"></Label>
            </StackPanel>
        </Grid>

        <Border Grid.RowSpan="6"  Visibility="Collapsed" IsHitTestVisible="False" x:Name="Toast" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="50" MinWidth="120" BorderBrush="Black" BorderThickness="2" Background="White" CornerRadius="8" Margin="10">
            <Label x:Name="ToastLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Toast..."></Label>
        </Border>

    </Grid>
</UserControl>
